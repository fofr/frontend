<% content_for :extra_headers do %>
<link rel="canonical" href="<%= Frontend.govuk_website_root + root_path %>" />
<meta name="description" content="GOV.UK - The place to find government services and information - Simpler, clearer, faster" />
<% end %>
<% content_for :title, "Welcome to GOV.UK" %>
<% content_for :body_classes, "homepage" %>

<main id="content" role="main">
  <header class="homepage-top">
    <div class="govuk-width-container homepage-top__inner">
      <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            <h1 class="homepage-top__title">Welcome to GOV.UK</h1>
            <p class="homepage-top__intro">The best place to find government services and information</p>
            <p class="homepage-top__intro homepage-top__intro--simpler">Simpler, clearer, faster</p>

            <form action="/search" method="get" role="search">
              <%= render "govuk_publishing_components/components/search", on_govuk_blue: true %>
            </form>
          </div>

          <div class="homepage-top__links">
            <h2 class="homepage-top__links-title">Popular on GOV.UK</h2>
            <ul class="homepage-top__links-list">
              <li class="homepage-top__links-item"><a href="/brexit" class="homepage-top__links-link">Get ready for Brexit</a></li>
              <li class="homepage-top__links-item"><a href="/jobsearch" class="homepage-top__links-link">Find a job</a></li>
              <li class="homepage-top__links-item"><a href="/vehicle-tax" class="homepage-top__links-link">Renew vehicle tax</a></li>
              <li class="homepage-top__links-item"><a href="/book-theory-test" class="homepage-top__links-link">Book your theory test</a></li>
              <li class="homepage-top__links-item"><a href="/personal-tax-account" class="homepage-top__links-link">Personal tax account</a></li>
            </ul>
          </div>
        </div>
    </div>
  </header>

  <div id="homepage" class="govuk-width-container">
    <section class="services-block" aria-labelledby="services-and-information-label" id="services-and-information">
      <div class="govuk-grid-row">
        <h2 id="services-and-information-label" class="visuallyhidden">Services and information</h2>
        <%= render :partial => "categories" %>
      </div>
    </section>

    <hr class="homepage-divider" id="departments-and-policy" aria-hidden="true" />

    <section class="departments-and-policy" aria-labelledby="departments-and-policy-label">
      <div class="govuk-grid-row">
        <h2 id="departments-and-policy-label" class="visuallyhidden">Departments and&nbsp;policy</h2>
        <div class="govuk-grid-column-one-third">
          <ul class="homepage-numbers">
            <li><a href="/government/organisations#ministerial_departments" class="homepage-numbers__link govuk-link"><strong class="homepage-numbers__large">25</strong> Ministerial departments</a></li>
            <li><a href="/government/organisations#agencies_and_other_public_bodies" class="homepage-numbers__link govuk-link"><strong class="homepage-numbers__large">405</strong> Other agencies and public&nbsp;bodies</a></li>
          </ul>
        </div>

        <div class="govuk-grid-column-two-thirds">
          <p class="homepage-info">
            The websites of all <a href="/government/organisations" class="govuk-link">government
            departments</a> and many other agencies and public bodies have
            been merged into GOV.UK.
          </p>
          <p class="homepage-info">
            Here you can see all <a href="/search/news-and-communications" class="govuk-link">news and communications</a>,
            <a href="/search/research-and-statistics" class="govuk-link">statistics</a>
            and
            <a href= "<%= CGI::escapeHTML('/search/policy-papers-and-consultations?content_store_document_type[]=open_consultations&content_store_document_type[]=closed_consultations') %>" class="govuk-link">consultations</a>.
          </p>
          <p class="homepage-info">
            Find out <a href="/performance" class="govuk-link">how government services are performing</a>
            and how satisfied users are.
          </p>
        </div>
      </div>
    </section>

    <section>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-third">
          <a href="https://www.longtermplan.nhs.uk/" class="govuk-link homepage-promo">
            <%= image_tag 'homepage/nhs-long-term-plan.png', alt: '', class: 'homepage-promo__image' %>
            <h3 class="homepage-promo__title">NHS long-term plan</h3>
          </a>
          <p class="homepage-promo__text">
            Read about how an extra Â£33.9 billon each year will improve the NHS - for patients, their families and its staff.
          </p>
        </div>

        <div class="govuk-grid-column-one-third">
          <a href="/brexit" class="govuk-link homepage-promo">
            <%= image_tag 'homepage/get-ready-for-brexit.png', alt: '', class: 'homepage-promo__image' %>
            <h3 class="homepage-promo__title">Get ready for Brexit</h3>
          </a>
          <p class="homepage-promo__text">
            The UK is leaving the EU on 31 October 2019. Find out what you need to do.
          </p>
        </div>

        <div class="govuk-grid-column-one-third">
          <a href="/guidance/grenfell-tower-fire-june-2017-support-for-people-affected" class="govuk-link homepage-promo">
            <%= image_tag 'homepage/grenfell-tower-support.png', alt: '', class: 'homepage-promo__image' %>
            <h3 class="homepage-promo__title">Grenfell Tower fire</h3>
          </a>
          <p class="homepage-promo__text">
            Find out about the support available.
          </p>
        </div>
      </div>
    <section>

    <hr class="homepage-divider" id="more-on-govuk" aria-hidden="true" />

    <section aria-labelledby="more-on-govuk-label">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-third">
          <h2 id="more-on-govuk-label" class="homepage-more__title">More on GOV.UK</h2>
        </div>

        <div class="govuk-grid-column-one-third">
          <h3 class="homepage-more__subtitle">Most active</h3>
          <ul class="govuk-list homepage-more__list">
            <li><a href="/jobsearch" class="govuk-link">Find a job</a></li>
            <li><a href="/student-finance-register-login" class="govuk-link">Log in to student finance</a></li>
            <li><a href="/passport-fees" class="govuk-link">Passport fees</a></li>
            <li><a href="/jobseekers-allowance" class="govuk-link">Jobseeker's Allowance</a></li>
            <li><a href="/council-tax-bands" class="govuk-link">Council Tax bands</a></li>
            <li><a href="/running-a-limited-company" class="govuk-link">Running a limited company</a></li>
            <li><a href="/book-a-driving-theory-test" class="govuk-link">Driving theory test</a></li>
            <li><a href="/calculate-vehicle-tax-rates" class="govuk-link">Vehicle tax rates</a></li>
            <li><a href="/vehicle-tax" class="govuk-link">Renew vehicle tax</a></li>
            <li><a href="/vat-rates" class="govuk-link">VAT rates</a></li>
          </ul>
        </div>

        <div class="govuk-grid-column-one-third" id="promo">
          <h3>
            <a href="/bank-holidays" class="govuk-link homepage-promo__link">
              <span class="homepage-promo__link-content">UK bank holidays</span>
            </a>
          </h3>
          <p class="homepage-promo__text">Check the dates for <a href="/bank-holidays" class="govuk-link">bank holidays</a> in England, Wales, Scotland and Northern Ireland.</p>
        </div>
      </div>
    </section>
  </div>
</main>
